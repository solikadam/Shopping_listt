<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListApp.Views.ProductView">
    <StackLayout Orientation="Horizontal" Padding="10">
        <CheckBox IsChecked="{Binding IsPurchased}" CheckedChanged="OnPurchasedChanged" />
        <Label Text="{Binding Name}" FontSize="16" />
        <Label Text="{Binding Quantity, StringFormat='Ilość: {0}'}" FontSize="14" />
        <Label Text="{Binding Unit}" FontSize="14" />
        <Button Text="+" Clicked="IncreaseQuantity" />
        <Button Text="-" Clicked="DecreaseQuantity" />
        <Entry Text="{Binding Quantity, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="50" />
        <Button Text="Usuń" Clicked="DeleteProduct" />
    </StackLayout>
</ContentView>
