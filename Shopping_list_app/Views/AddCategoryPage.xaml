<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListApp.Views.AddCategoryPage"
             BackgroundColor="#383838">
    <StackLayout Padding="10">
        <Label Text="Nazwa nowej kategorii" TextColor="white" FontSize="20"/>
        <Entry x:Name="CategoryNameEntry" Placeholder="Wpisz nazwę kategorii" 
               BackgroundColor="#282828" 
               TextColor="white" 
               PlaceholderColor="white"/>
        <Button Text="Dodaj kategorię" Clicked="AddCategoryButton_Clicked" 
                BackgroundColor="#5A6" 
                TextColor="white"/>
    </StackLayout>
</ContentPage>

