<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListApp.Views.AddProductPage">
    <StackLayout Padding="10">
        <Picker x:Name="ProductPicker" Title="Wybierz produkt" />
        <Label Text="Lub dodaj nowy produkt" />
        <Entry x:Name="NewProductNameEntry" Placeholder="Wpisz nazwę nowego produktu" />
        <Label Text="Ilość" />
        <Entry x:Name="ProductQuantityEntry" Placeholder="Wpisz ilość" Keyboard="Numeric" />
        <Picker x:Name="ProductUnitPicker" Title="Wybierz jednostkę" />
        <Picker x:Name="CategoryPicker" Title="Wybierz kategorię" />
        <Button Text="Dodaj produkt" Clicked="AddProductButton_Clicked" />
    </StackLayout>
</ContentPage>



