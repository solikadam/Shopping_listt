<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ShoppingListApp.Views"
             x:Class="ShoppingListApp.Views.CategoryView">
    <StackLayout>
        <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
        <Button Text="RozwiÅ„" Clicked="ToggleExpand" />
        <CollectionView ItemsSource="{Binding Products}" IsVisible="{Binding IsExpanded}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:ProductView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>
